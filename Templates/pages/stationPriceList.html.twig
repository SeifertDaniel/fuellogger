{% extends "base.html.twig" %}

{% block title %}{{ station['stationname'] }}{% endblock %}

{% block content %}
    <div class="container">
        <h2>{{ station['stationname'] }}</h2>

        <div class="row">
            <div class="col-sm">
                <h3>&Ouml;ffnungszeiten</h3>
                <table class="table table-bordered table-striped">
                    {% for day,dayTimes in openingTimes %}
                        <tr>
                            <td>
                                {{ day }}
                            </td>
                            <td>
                                {% for time in dayTimes %}
                                    {{ time['from'] }} - {{ time['to'] }}<br>
                                {% endfor %}
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>

            <div class="col-sm">
                <h3>Adresse</h3>
                <table class="table table-bordered table-striped">
                    <tr>
                        <td>
                            {{ station['name'] }}
                        </td>
                    </tr>
                    <tr>
                        <td>
                            {{ station['street'] }} {{ station['housenumber'] }}
                        </td>
                    </tr>
                    <tr>
                        <td>
                            {{ "%05d"|format(station['postcode']) }} {{ station['place'] }}
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <a href="https://www.google.com/maps/search/?api=1&query={{ station['lat']|url_encode }},{{ station['lon']|url_encode }}">
                                <i class="fa-solid fa-map-location-dot"></i> auf Google Maps
                            </a>
                        </td>
                    </tr>
                </table>
            </div>

            <div class="col-sm">
                <h3>aktuelle Preise</h3>
                <table class="table table-bordered table-striped">
                    {% for typeprices in currPrices %}
                        <tr>
                            <td>
                                {{ typeprices['type']|capitalize }}
                            </td>
                            <td>
                                {{ typeprices['price'] }} &euro;
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>

        <div class="svg">
            {{ chart|raw }}
        </div>

        <nav>
            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                {% for fuelType,mylists in lists %}
                    <button class="nav-link{% if loop.first %} active {% endif %}" id="nav-{{ fuelType }}-tab" data-bs-toggle="tab" data-bs-target="#nav-{{ fuelType }}" type="button" role="tab" aria-controls="nav-{{ fuelType }}" aria-selected="true">{{ fuelType|capitalize }}</button>
                {% endfor %}
            </div>
        </nav>
        <div class="tab-content" id="nav-tabContent">
            {% for fuelType,mylists in lists %}
                <div class="tab-pane fade show{% if loop.first %} active {% endif %}" id="nav-{{ fuelType }}" role="tabpanel" aria-labelledby="nav-{{ fuelType }}-tab">
                    <table class="table table-bordered table-striped">
                        <tr>
                            <th>Datum</th>
                            <th>durchschn. Erh&ouml;hung</th>
                            <th>durchschn. Haltezeit Tiefpreis</th>
                        </tr>
                        {% for statItem in mylists['stat'] %}
                            <tr>
                                <td>{{ statItem.date }}</td>
                                <td>{{ statItem.pricediff }}</td>
                                <td>{{ statItem.timediff }} Min.</td>
                            </tr>
                        {% endfor %}
                    </table>

                    <table class="table table-bordered table-striped">
                        <tr>
                            <th>von</th>
                            <th>bis</th>
                            <th>Preis</th>
                        </tr>
                        {% for priceItem in mylists['prices'] %}
                            <tr>
                                <td>{{ priceItem.ts1 }}</td>
                                <td>{{ priceItem.ts2 }}</td>
                                <td>{{ priceItem.price }} &euro;</td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            {% endfor %}
        </div>

    </div>
{% endblock %}
